<h2>お知らせ</h2>
<ul>
  <% @notifications.each do |notification| %>
  <hr>
   <li>
     <span><%= notification.read %></span>
     <p>
       <%= notification.comment.user.try(:name) %>さんが
       あなたのブログ(<%= link_to "#{notifications.comment.blog.title}",blog_path(notification.comment.blog,notification_id: notification_id) %>)にコメントしました。
     </p>
     <p><%= notification.created_at %></p>
   </li>
  <% end %>
</ul>
